{% extends 'base.html.twig' %}

{% block title %}{{ 'Add new movie'|trans }}{% endblock %}

{% block body %}
    <div class="container mt-4">

        {% for message in app.flashes('error') %}
            <div class="alert alert-danger mt-4">
                {{ message|raw }}
            </div>
        {% endfor %}

        <h1>{{ 'Add new movie'|trans }}</h1>

        {{ form_start(form, {'attr': { 'class': is_submitted and not is_valid ? 'is-invalid' : '' }}) }}
        <div class="form-group">
            {{ form_label(form.title) }}
            {{ form_widget(form.title) }}
            <div class="form-error invalid-feedback">
                {{ form_errors(form.title) }}
            </div>
        </div>

        <div class="form-group">
            {{ form_label(form.description) }}
            {{ form_widget(form.description) }}
            <div class="form-error invalid-feedback">
                {{ form_errors(form.description) }}
            </div>
        </div>

        <div class="form-group">
            {{ form_label(form.releaseDate) }}
            {{ form_widget(form.releaseDate) }}
            <div class="form-error invalid-feedback">
                {{ form_errors(form.releaseDate) }}
            </div>
        </div>

        <div class="form-group">
            {{ form_label(form.characters) }}
            {{ form_widget(form.characters, {'attr': { 'class': 'd-none' }}) }}
            <div>
                <i>{{ 'Characters can be added later on movie edit page'|trans }}</i>
            </div>
            {# <div class="form-error invalid-feedback">
                {{ form_errors(form.characters) }}
            </div> #}
        </div>

        <div class="form-group mt-5 d-flex justify-content-between">
            {% include '_parts/components/link_back_movies.html.twig' with { 'label': 'Cancel'|trans, 'title': 'Cancel and go back to movies list'|trans } %}
            {{ form_widget(form.submit) }}
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}
